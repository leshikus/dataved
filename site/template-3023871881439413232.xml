/* Variable definitions
   ====================
   <Variable name="bgcolor" description="Page Background Color"
             type="color" default="#fff" value="#ffffff">

   <Variable name="bgUrl" description="Page Background Image"
           type="automatic" default="http://lh5.ggpht.com/_92OKnY0EOfU/TKOR3IktUqI/AAAAAAAAAg0/cIapllwhJjE/s800/sand.jpg" value="http://lh5.ggpht.com/_92OKnY0EOfU/TKOR3IktUqI/AAAAAAAAAg0/cIapllwhJjE/s800/sand.jpg">

   <Variable name="containerpadding" description="Container Padding"
           type="automatic" default="2ex" value="2ex">

   <Variable name="minmainwidth" description="Maximal post width"
           type="automatic" default="728px" value="728px">
   <Variable name="maxmainwidth" description="Maximal post width"
           type="automatic" default="848px" value="848px">
   <Variable name="sidebarwidth" description="Sidebar Width"
           type="automatic" default="172px" value="172px">

   <Variable name="textcolor" description="Text Color"
             type="color" default="#333" value="#333333">
   <Variable name="footercolor" description="Footer Text Color"
             type="color" default="#111" value="#111111">
   <Variable name="linkcolor" description="Link Color"
             type="color" default="#58a" value="#5588aa">
   <Variable name="hovercolor" description="Post Title Color"
             type="color" default="#c60" value="#cc6600">
   <Variable name="visitedlinkcolor" description="Visited Link Color"
             type="color" default="#555" value="#555555">
   <Variable name="pagetitlecolor" description="Blog Title Color"
             type="color" default="#169" value="#156998">
   <Variable name="descriptioncolor" description="Blog Description Color"
             type="color" default="#999" value="#999999">
   <Variable name="titlecolor" description="Post Title Color"
             type="color" default="#666" value="#666666">
   <Variable name="bordercolor" description="Border Color"
             type="color" default="#ccc" value="#cccccc">
   <Variable name="sidebarcolor" description="Sidebar Title Color"
             type="color" default="#666" value="#666666">
   <Variable name="sidebartextcolor" description="Sidebar Text Color"
             type="color" default="#222" value="#222222">

   <Variable name="bodyfont" description="Text Font"
             type="font" default="normal 92% Verdana, sans-serif" value="normal 92% Verdana, sans-serif">

   <Variable name="pagetitlefont" description="Blog Title Font"
             type="font"
             default="normal 200% Calibri, Arial, Verdana, Sans-serif" value="normal 200% Calibri, Arial, Verdana, Sans-serif">

   <Variable name="postfooterfont" description="Post Footer Font"
             type="font"
             default="normal normal 78% 'Trebuchet MS', Trebuchet, Arial, Verdana, Sans-serif" value="normal normal 78% 'Trebuchet MS', Trebuchet, Arial, Verdana, Sans-serif">
*/

/* General style */
body {
  font: $bodyfont;
  background: $bgcolor;
  background-image: url("$bgUrl");
  color: $textcolor;
}
a:link {
  color: $linkcolor;
}
a:visited {
  color: $visitedlinkcolor;
}
a:hover {
  color: $hovercolor;
}
h1 {
  border-bottom: dotted 1px $bordercolor;
  color: $pagetitlecolor;
  font: $pagetitlefont;
}
h1 a, h1 a: link, h1 a: visited { 
  color: $pagetitlecolor;
}
h2.date-header {
  color: $footercolor;
}
h2, h3.post-title, h3, h4, h5 {
  color: $titlecolor;
  font: $pagetitlefont;
}
.post {
  background: $bgcolor;
  padding: $containerpadding;
  border-radius: $containerpadding;
}
.post-footer {
  color: $footercolor;
}
.post table.boxed td, .post table.boxed th {
  color: $bgcolor;
}
.post table.boxed th {
  background-color: $linkcolor;
  border-color: $pagetitlecolor;
}
.post table.boxed td {
  background-color: $descriptioncolor;
  border-color: $bordercolor;
}
.titleimage {
  width: $sidebarwidth;
  margin: 0 $containerpadding;
}
.titlewrapper {
  min-width: $minmainwidth;
  max-width: $maxmainwidth;
}
#CustomSearch1 {
  width: $sidebarwidth;
  padding: $containerpadding 0;
}
#outer-wrapper {
  padding: 0 $containerpadding;
}
#main-wrapper {
  min-width: $minmainwidth;
  max-width: $maxmainwidth;
}
#comments {
  color: $textcolor;
}
#comments .comment-footer {
  color: $footercolor;
}
.sidebar { 
  color: $sidebartextcolor;
}
.sidebar .widget, .main .widget { 
  border-bottom: 1px dotted $bordercolor;
}
.sidebar .widget {
  width: $sidebarwidth;
}
.profile-data {
  font: $postfooterfont;
  color: $sidebarcolor;
}
.profile-link { 
  font: $postfooterfont;
}

